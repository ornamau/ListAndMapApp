<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ksenya.MainPage"
       xmlns:local="clr-namespace:Ksenya">
    
    <FlyoutItem Shell.TabBarIsVisible="False" 
                x:Name="fly"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Карта" ContentTemplate="{DataTemplate local:Page1}" />
        <ShellContent Title="Список участков" ContentTemplate="{DataTemplate local:Page2}" />
        <ShellContent Title="Общая информация" ContentTemplate="{DataTemplate local:RegularInfo}" />
        <ShellContent Title="Депутаты" ContentTemplate="{DataTemplate local:Page2}" />
        <ShellContent Title="Голосую первый раз" ContentTemplate="{DataTemplate local:Page2}" />
        <ShellContent Title="Заметил правонарушение" ContentTemplate="{DataTemplate local:Page2}" />
    </FlyoutItem>
</Shell>
